{
  "private": true,
  "name": "bun-dap",
  "publisher": "oven",
  "version": "0.0.1",
  "description": "Debug Adapter Protocol for Bun.",
  "license": "MIT",
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers"
  ],
  "scripts": {
    "build": "bunx esbuild src/extension.ts src/web-extension.ts --bundle --external:vscode --outdir=dist --platform=node --format=cjs",
    "build:watch": "bunx esbuild --watch src/extension.ts src/web-extension.ts --bundle --external:vscode --outdir=dist --platform=node --format=cjs"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "eslint": "^8.12.0",
    "typescript": "^5.0.0",
    "bun-types": "^0.7.3"
  },
  "main": "./dist/extension.js",
  "browser": "./dist/web-extension.js",
  "activationEvents": [
    "onDebugResolve:mock",
    "onDebugDynamicConfigurations:mock",
    "onCommand:extension.bun.getProgramName"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.bun.runEditorContents",
          "when": "resourceLangId == javascript",
          "group": "navigation@1"
        },
        {
          "command": "extension.bun.debugEditorContents",
          "when": "resourceLangId == javascript",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.bun.debugEditorContents",
          "when": "resourceLangId == javascript"
        },
        {
          "command": "extension.bun.runEditorContents",
          "when": "resourceLangId == javascript"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.bun.debugEditorContents",
        "title": "Debug File",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.bun.runEditorContents",
        "title": "Run File",
        "category": "Mock Debug",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "breakpoints": [
      {
        "language": "javascript"
      },
      {
        "language": "javascriptreact"
      },
      {
        "language": "typescript"
      },
      {
        "language": "typescriptreact"
      }
    ],
    "debuggers": [
      {
        "type": "bun",
        "languages": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "label": "Bun",
        "program": "./out/debugAdapter.js",
        "runtime": "bun",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          },
          "attach": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a file.",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "bun",
            "request": "launch",
            "name": "Ask for file name",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Bun: Debug",
            "description": "A new configuration for 'debugging' a user selected markdown file.",
            "body": {
              "type": "bun",
              "request": "launch",
              "name": "Ask for file name",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.bun.getProgramName"
        }
      }
    ]
  }
}
